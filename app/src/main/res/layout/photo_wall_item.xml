<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <choosephoto.Views.WrapHeightImageView
        android:id="@+id/photo_wall_item_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_chat_empty_photo" />

    <ImageView
        android:id="@+id/photo_wall_item_cb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@drawable/compose_photo_preview_default"
        android:padding="2dp"
        android:scaleType="centerCrop" />
</RelativeLayout>