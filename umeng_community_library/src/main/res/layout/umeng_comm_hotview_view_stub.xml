<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout android:id="@+id/umeng_comm_linear_layout_ll" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView android:id="@+id/umeng_comm_oneday_btn" android:layout_width="wrap_content"
            android:layout_height="20dp" android:layout_weight="1"
            android:background="@drawable/umeng_comm_hot_button_selector"
            android:contentDescription="点我" android:gravity="center" android:text="1天" />
        <TextView android:id="@+id/umeng_comm_threedays_btn" android:layout_width="wrap_content"
            android:layout_height="20dp" android:layout_weight="1"
            android:background="@drawable/umeng_comm_hot_button_selector"
            android:contentDescription="点我" android:gravity="center" android:text="3天" />
        <TextView android:id="@+id/umeng_comm_sevendays_btn" android:layout_width="wrap_content"
            android:layout_height="20dp" android:layout_weight="1"
            android:background="@drawable/umeng_comm_hot_button_selector"
            android:contentDescription="点我" android:gravity="center" android:text="7天" />
        <TextView android:id="@+id/umeng_comm_thirtydays_btn" android:layout_width="wrap_content"
            android:layout_height="20dp" android:layout_weight="1"
            android:background="@drawable/umeng_comm_hot_button_selector"
            android:contentDescription="点我" android:gravity="center" android:text="30天" />
    </LinearLayout>
</LinearLayout>