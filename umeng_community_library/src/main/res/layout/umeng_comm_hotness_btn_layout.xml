<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/umeng_comm_oneday_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/umeng_comm_hot_button_selector"
        android:button="@null"
        android:checked="true"
        android:gravity="center"
        android:text="1天"
        android:textColor="@drawable/umeng_comm_button_hot_btn_text_selector"
        android:textSize="@dimen/text_size_hot" />

    <RadioButton
        android:id="@+id/umeng_comm_threedays_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/umeng_comm_hot_button_selector"
        android:button="@null"
        android:gravity="center"
        android:text="3天"
        android:textColor="@drawable/umeng_comm_button_hot_btn_text_selector"
        android:textSize="@dimen/text_size_hot" />

    <RadioButton
        android:id="@+id/umeng_comm_sevendays_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/umeng_comm_hot_button_selector"
        android:button="@null"
        android:gravity="center"
        android:text="7天"
        android:textColor="@drawable/umeng_comm_button_hot_btn_text_selector"
        android:textSize="@dimen/text_size_hot" />

    <RadioButton
        android:id="@+id/umeng_comm_thirtydays_btn"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/umeng_comm_hot_button_selector"
        android:button="@null"
        android:gravity="center"
        android:text="30天"
        android:textColor="@drawable/umeng_comm_button_hot_btn_text_selector"
        android:textSize="@dimen/text_size_hot" />
</LinearLayout>